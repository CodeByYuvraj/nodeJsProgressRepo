<div class="container mt-2 text-dark">
  <form method="POST">
    <div class="form-group">
      <label for="name">Name of Patient:</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter Name of Patient"
        name="patientName"
        required
      />
    </div>
    <div class="form-group">
      <label for="name">Age of Patient:</label>
      <input
        type="number"
        class="form-control"
        id="name"
        placeholder="Enter Age of Patient"
        name="patientAge"
        required
      />
    </div>
    <div class="form-group">
      <label for="sel1">Select Gender:</label>
      <select class="form-control" id="sel2" name="patientGender" placeholder="Select">
        <option selected disabled>select</option>
        <option>Male</option>
        <option>Female</option>
        <option>prefer not to say</option>
        <option>other</option>
      </select>
    </div>
    <div class="form-group">
      <label for="name">Enter Phone Number:</label>
      <input
        type="number"
        class="form-control"
        id="name"
        placeholder="Enter Phone number"
        name="patientPhoneNo"
        required
      />
    </div>
    <div class="form-group">
      <label for="name">Address:</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter Address"
        name="patientAddress"
        required
      />
    </div>
    <div class="form-group">
      <label for="sel1">Select need:</label>
      <select class="form-control" id="sel1" name="need" onchange="slecFun()">
        <option value="select" selected disabled>select</option>
        <option value="oxygen">Oxygen</option>
        <option value="bed">Bed</option>
        <option value="plasma">Plasma</option>
        <option value="other">other</option>
      </select>
    </div>
    <div class="form-group" id="other">
      <label for="name">other:</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder=""
        name="otherNeed"
      />
    </div>

    <div class="form-group" id="blood">
      <label for="name">Blood Group:</label>
      <input
        type="text"
        class="form-control"
        id="Bg"
        placeholder="Enter blood Group"
        name="Bg"
      />
    </div>

    <div class="text-center mt-5">
      <button type="submit" class="btn btn-primary">Submit Details</button>
    </div>
  </form>
</div>
